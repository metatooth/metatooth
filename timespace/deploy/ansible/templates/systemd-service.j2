[Unit]
Description=The laramirandagoodman.com website
Requires=docker.service
After=docker.service

[Service]
Type=oneshot
ExecStart=/bin/bash -c 'docker container inspect {{ container_name }} >/dev/null 2>&1 || docker run -d -p 3333:4567 --name {{ container_name }} baldur_app:latest'
RemainAfterExit=yes

[Install]
WantedBy=default.target
