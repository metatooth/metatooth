upstream metatooth_backend {
  server thermos.metatooth.com:3330;
}

server {
  listen 443 ssl;
  server_name www.metatooth.com metatooth.com;

  if ($scheme = http) {
    return 301 https://$host$request_uri;
  }

  location / {
    proxy_pass http://metatooth_backend/;

    proxy_headers_hash_max_size 512;
    proxy_headers_hash_bucket_size 128;
    proxy_set_header X-Forwarded-Host $host;
    proxy_set_header X-Forwarded-Proto $scheme;
  }

  ssl_certificate /root/.acme.sh/metatooth.com_ecc/fullchain.cer;
  ssl_certificate_key /root/.acme.sh/metatooth.com_ecc/metatooth.com.key;
}

server {
  if ($host = www.metatooth.com) {
    return 301 https://metatooth.com$request_uri;
  }

  if ($host = metatooth.com) {
    return 301 https://$host$request_uri;
  }

  listen 80;
  server_name www.metatooth.com metatooth.com;
  return 404;
}
